                            <br />
                            <strong>@Html.ActionLink("Contact  /", "Contact", "Home")</strong>
                            <br />
                            <br />
                        </li>
                    </ul>

                    @Html.Partial("_LoginPartial")

                    @*<div class="navbar-text"><a href="#" class="search-btn"><i class="icon-search-1"></i></a></div>*@
